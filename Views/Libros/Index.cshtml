@model IEnumerable<BibliotecaMVC.Models.Libro>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editorial)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero.NombreGenero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editorial.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IDLibro">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IDLibro">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IDLibro">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
